<div class="container">
  <p class="mt">
    <%= link_to 'new', new_question_path, class: "button button-main" %>
  </p>

  <p class="mt">
    <%= render 'form', question: @question %>
  </p>
</div>

<div class="container mt-sm">
  <h2 class="title-lg"><%= Question.count %> <%= inclination(Question.count, 'question', 'questions') %></h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <%= render 'question', question: question %>
  </div>
<% end %>